<div class="container py-3">
  <div class="row py-3">
    <h2>商品一覧</h2>
    <!--〇の中に＋が入ったボタン（商品登録画面に遷移する）-->
    <div class="col-lg-9 text-right">
      <%= link_to new_admin_item_path do %>
        <button type="button" class="border border-3 rounded-circle">＋</button>
      <% end %>
    </div>
  </div>
  
  
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th class="col-sm-1 py-2">商品ID</th>
        <th class="col-md-3 py-2">商品名</th>
        <th class="col-md-2 py-2">税抜価格</th>
        <th class="col-md-2 py-2">ジャンル</th>
        <th class="col-md-2 py-2">ステータス</th>
      </tr>
    </thead>
    
    
    <% @items.each do |item| %>
    <tbody>
      <td class="col-sm-1 py-2"><%= item.id %></td>
      <td class="col-sm-1 py-2"><%= link_to item.name, admin_item_path(item.id) %></td>
      <td class="col-sm-1 py-2"><%= number_with_delimiter(item.price) %></td>
      <td class="col-sm-1 py-2"><%= item.genre.name %></td>
      <td class="col-sm-1 py-2"><%= item.is_active ? '販売中' : '販売停止中' %></td>
    </tbody>
    <% end %>
  </table>
</div>
