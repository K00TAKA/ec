<div class-"container">
  <div class="row">
    <h1>商品新規登録</h1>
  </div>
  
  <%= form_with model: @item do |f| %>
  <div class="row">
    <label for="item_image">商品画像</label>
    <%= f.file_field :item_image, accept: "image/*" %>
  </div>
  <div class="row">
    <label for="item_name">商品名</label>
    <%= f.text_field :item_name %>
  </div>
  <div class="row">
    <label for="item_introduction">商品説明</label>
    <%= f.text_area :introduction %>
  </div>
  <div class="row">
    <label for="item_genre">ジャンル</label>
    <!--登録済みジャンルをプルダウン選択できるようにする-->
  </div>
  <div class="row">
    <label for="item_price">税抜価格</label>
    <%= f.text_file :price %>
  </div>
  <div class="row">
    <label for="item_introduction">販売ステータス</label>
    <!--販売ステータス登録できるようにする-->
  </div>
  <div class="row">
    <%= f.submit "新規登録", class:"btn btn-sm btn-secondary"%>
  </div>
  <% end %>
</div>



