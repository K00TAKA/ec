<div class="container">
  <div class="row">
    <h1>
      <%= @customer.full_name %>さんの会員情報編集
    </h1>
  </div>
  
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="row">
    <div class="col">
      <h5>会員ID</h5>
    </div>
    <div class="col">
      <%= @customer.id %>
    </div>
  </div>  
  <div class="row">
    <div class="col">
      <h5>氏名</h5>
    </div>
    <div class="col">
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h5>フリガナ</h5>
    </div>
    <div class="col">
      <%= f.text_field :first_name_kana %>
      <%= f.text_field :last_name_kana %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h5>郵便番号</h5>
    </div>
    <div class="col">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h5>住所</h5>
    </div>
    <div class="col">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h5>電話番号</h5>
    </div>
    <div class="col">
      <%= f.text_field :telephone_number %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h5>メールアドレス</h5>
    </div>
    <div class="col">
      <%= f.text_field :email %>
    </div>
  </div>
    <div class="row">
      <div class="col">
        <h5>会員ステータス</h5>
      </div>
    <div class="col">
      <!--< ステータス　有効　退会 >-->
    </div>
  </div>
  <div class="row pb-3">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  </div>
  <% end %>
</div>