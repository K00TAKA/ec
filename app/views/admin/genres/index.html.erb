<div class="container">
  <h1>ジャンル一覧・追加</h1>
  <div class="row">
    <div class="col">
      <p>ジャンル名</p>
    </div>
    <div class="col">
      <%= form_with model: [:admin, Genre.new] do |f| %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
  
  <table>
    <tr>
      <th>ジャンル</th>
    </tr>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </table>

</div>