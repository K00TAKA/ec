<h2>会員情報編集</h2>

<div class="container">
  <%= form_with model: @customer, url: customer_path(@customer), method: :patch do |f| %>
    <!--<= render "publics/shared/error_messages", resource: @customer %>-->

    <div class="field">
    <%= f.label "氏名" %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>
  
  <div class="actions">
    <%= f.submit '編集内容を保存', class: 'btn btn-success' %>
    <%= link_to "退会する", customers_check_path, class: 'btn btn-danger' %>
  </div>
  
  <% end %>
</div>

  

