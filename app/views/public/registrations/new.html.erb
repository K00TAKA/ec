<div class="container">
  <h2>新規会員登録</h2>
  <div class="row">
    <div class="col">
      <%= form_with model: @customer, url:customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class="row">
          <div class="col-lg-3"><%= f.label "名前" %></div>
          <div class="col-xs-2"><%= f.label :"(姓)" %></div>
          <div class="col-lg-3"><%= f.text_field :first_name %></div>
          <div class="col-xs-2"><%= f.label :"(名)" %></div>
          <div class="col-lg-3"><%= f.text_field :last_name %></div>
        </div>
        
        <div class="row">
          <div class="col-lg-3"><%= f.label "フリガナ" %></div>
          <div class="col-xs-2"><%= f.label :"(ｾｲ)" %></div>
          <div class="col-lg-3"><%= f.text_field :first_name_kana %></div>
          <div class="col-xs-2"><%= f.label :"(ﾒｲ)" %></div>
          <div class="col-lg-3"><%= f.text_field :last_name_kana %></div>
        </div>
        
        <div class="row">
          <div class="col-lg-3"><%= f.label :email %></div>
          <div class="col-xs-2"><%= f.label :"　" %></div>
          <div class="col-lg-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>
        
        <div class="row">
          <div class="col-lg-3"><%= f.label "郵便番号(ハイフンなし)" %></div>
          <div class="col-xs-2"><%= f.label :"　" %></div>
          <div class="col-lg-2"><%= f.text_field :postal_code %></div>
        </div>
        
        <div class="row">
          <div class="col-lg-3"><%= f.label "住所" %></div>
          <div class="col-xs-2"><%= f.label :"　" %></div>
          <div class="col-lg-2"><%= f.text_field :address %></div>
        </div>
        
        <div class="row">
          <div class="col-lg-3"><%= f.label "電話番号(ハイフンなし)" %></div>
          <div class="col-xs-2"><%= f.label :"　" %></div>
          <div class="col-lg-2"><%= f.text_field :telephone_number %></div>
        </div>
        
        <div class="row">
          <div class="col-lg-3"><%= f.label "パスワード(6文字以上)" %></div>
          <div class="col-xs-2"><%= f.label :"　" %></div>
          <div class="col-lg-2"><%= f.password_field :password, autocomplete: "new-password" %></div>
        </div>
        
        <div class="row">
          <div class="col-lg-3"><%= f.label "パスワード(確認用)" %></div>
          <div class="col-xs-2"><%= f.label :"　" %></div>
          <div class="col-lg-2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
        </div>
        
        <div class="row">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
    
    <div class="row">
      既に登録済みの方<%= render "public/shared/links" %>
    </div>
  </div>
</div>




