<div class="container">
  <h2>ログイン</h2>
    <div class="row">
      <div class="col">
        <h3>会員の方はこちらからログイン</h3>
        <%= form_with model: @customer, url: customer_session_path do |f| %>
        
        <div class="row">
          <div class="col-lg-2"><%= f.label 'メールアドレス' %></div>
          <div class="col-xs-1"><%= f.label :"　" %></div>
          <div class="col-lg-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>
      
        <div class="row">
          <div class="col-lg-2"><%= f.label 'パスワード' %></div>
          <div class="col-xs-1"><%= f.label :"　" %></div>
          <div class="col-lg-2"><%= f.password_field :password, autocomplete: "current-password" %></div>
        </div>
        
        <div class="row">
          <%= f.submit "ログイン", class: 'btn btn-success' %>
        </div>
        <% end %>
        
        <div>
          <h2>会員登録がお済でない方</h2>
          <%= render "public/shared/links" %>
        </div>

      </div>  
    </div>
</div>
