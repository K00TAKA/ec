<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, items_path %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    
    <div class="col-lg-8">
      <h2>商品一覧</h2>
      <strong>全<%= @items.count %>件</strong>
      <div class="row">
        <% @items.each do |item| %>
        <div class="col">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.image, size: "120x100" %><br>
          <% end %>
          <p><%= item.name %></p>
          <p>￥<%= number_with_delimiter(item.price_with_tax) %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>