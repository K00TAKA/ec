<div class="container">
  <div class="row">
    <div class="col">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, public_items_path %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    
    <div class="col">
      <!--ジャンル検索の場合、商品一覧の部分は「[ジャンル名]一覧」に変更する-->
      <!--（全〇件）表示件数を出せるようにする-->
      <h1>商品一覧</h1> 
      <div class="items">
        <table>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= link_to public_item_path(item.id) do %>
                <%= image_tag item.get_image(200,100) %>
              <% end %>
              <%= item.name %>
              <%= item.price %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
      
      <!--ページネーション入れる-->
    </div>
  </div>
</div>