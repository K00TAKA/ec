<div class="container">
  <h1>ショッピングカート</h1>
  <table class="table table-bordered">
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th><br></th>
    </tr>
    
    <!--#合計金額の初期化-->
    <% 合計金額 = 0 %>

    <!--#カート内に商品があった場合-->
    <% if current_member.cart_items.present? %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= attachment_image_tag cart_item.item, :image, size: "100x100", format: 'jpeg' %>
            <%= cart_item.item.name %>
          </td>
          <td><%= (cart_item.item.price_with_tax).to_i %></td>
          <td>
            <%= form_with model:cart_item, url:cart_item_path(cart_item), method: :patch, local:true do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更" , class: "btn btn-success" %>
            <% end %>
          </td>
          <td><%= (cart_item.item.price_with_tax * cart_item.amount).to_i %></td>
          <td><%= link_to "削除", destroy_cart_item_path(cart_item.id) ,  method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%></td>
        </tr>
      <% end %>
  </table>
  <%= link_to "買い物を続ける" , root_path , class: "btn btn-primary" %>
  <%= @合計金額 += @cart_items.subtotal %>

  <%= link_to "情報入力に進む" , new_order_path , class: "btn btn-success" %>
</div>