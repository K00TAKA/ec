<div class="container">
  <h1>配送先登録/一覧</h1>
  <%= form_with model: @address do |f| %>
  <div class="row">
    <label for="postal_code">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="row">
    <label for="address">住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="row">
    <label for="name">氏名</label>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class:"btn btn-sm btn-secondary" %>
  </div>
  
  <div class="row">
    <table>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>氏名</th>
        <th></th>
      </tr>
      <%= @customer.addresses.each do |address| %>
      <td><%= customer.address.postal_code %></td>
      <td><%= customer.address.address %></td>
      <td><%= customer.address.name %></td>
      <td><%= button_to "編集する", edit_public_address_path(customer.id), class: 'btn btn-success' %></td>
      <td><%= button_to "削除する", public_address_path(customer.id), method: :delete, class: 'btn btn-danger'%></td>
      <% end %>
    </table>
  </div>
</div>