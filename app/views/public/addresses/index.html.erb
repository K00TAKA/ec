<div class="container py-3">
  <h3>配送先登録/一覧</h3>
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <table>
    <thead>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "新規登録", class: "btn btn-secondary" %></td>
      </tr>  
    </thead>
  </table>
  <% end %>
  
  <table class="table table-bordered">
    <tbody>
      <tr><thead class="thead-dark">
        <th class="col-xs-3">郵便番号</th>
        <th class="col-xs-3">住所</th>
        <th class="col-xs-3">氏名</th>
        <th class="col-xs-3"></th>
      </thead></tr>

      <tr>
        <td><%= @customer.postal_code %></td>
        <td><%= @customer.address %></td>
        <td><%= @customer.full_name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(@customer), class: 'btn btn-success' %>
          <%= link_to "削除する", address_path(@customer), method: :delete, class: 'btn btn-danger'%>
        </td>
      </tr>
      
      <%= @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address), class: 'btn btn-success' %>
            <%= link_to "削除する", address_path(address), method: :delete, class: 'btn btn-danger'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>